<Window x:Class="ClickyKeys.SetLoader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickyKeys"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:controls="clr-namespace:ClickyKeys.Controls"
        mc:Ignorable="d"
        Closing="Window_Closed"
        Title="SetLoader" Height="380" Width="300" MaxWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="52"/>
        </Grid.RowDefinitions>
        
        <Label x:Name="fileList" Content="Select settings profile" Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Futura Bk BT" FontSize="28" Grid.Row="0"/>
        
        <ScrollViewer Grid.Row="1" >
            <Grid x:Name="filesList" >


            </Grid>
        </ScrollViewer>
        
        <Grid VerticalAlignment="Bottom" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>

            </Grid.ColumnDefinitions>
            <Button Content="Exit" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,10,10,10" Click="Click_Exit" Grid.Column="0" />
            <Button Content="Load" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,10,10" Click="Click_Load" Grid.Column="2" />
            
        </Grid>
    </Grid>
</Window>
