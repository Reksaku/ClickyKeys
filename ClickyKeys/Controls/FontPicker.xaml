<UserControl x:Class="ClickyKeys.Controls.FontPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClickyKeys"
             mc:Ignorable="d"
            x:Name="root"
             MinHeight="40">
    <StackPanel Orientation="Horizontal" Margin="0" VerticalAlignment="Center" >
        <!-- Font family -->
        <ComboBox Width="165" Margin="20,0,8,0"
                  ItemsSource="{Binding FontFamilies, ElementName=root}"
                  SelectedItem="{Binding SettingsParameter.FontFamily, ElementName=root, Mode=TwoWay}"
                  IsEditable="True" StaysOpenOnEdit="True">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Source}" FontFamily="{Binding}" FontSize="16"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Size -->
        <ComboBox Width="80" Margin="0,0,8,0"
                  IsEditable="True"
                  Text="{Binding SettingsParameter.FontSize, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ComboBoxItem>8</ComboBoxItem>
            <ComboBoxItem>9</ComboBoxItem>
            <ComboBoxItem>10</ComboBoxItem>
            <ComboBoxItem>11</ComboBoxItem>
            <ComboBoxItem>12</ComboBoxItem>
            <ComboBoxItem>14</ComboBoxItem>
            <ComboBoxItem>16</ComboBoxItem>
            <ComboBoxItem>18</ComboBoxItem>
            <ComboBoxItem>24</ComboBoxItem>
            <ComboBoxItem>36</ComboBoxItem>
            <ComboBoxItem>48</ComboBoxItem>
        </ComboBox>

        <!-- Styles: B / I / U -->
        <ToggleButton Width="34" Height="28" Margin="0,0,6,0"
                      IsChecked="{Binding SettingsParameter.IsBold, ElementName=root, Mode=TwoWay}">
            <TextBlock FontWeight="Bold">B</TextBlock>
        </ToggleButton>
        <ToggleButton Width="34" Height="28" Margin="0,0,6,0"
                      IsChecked="{Binding SettingsParameter.IsItalic, ElementName=root, Mode=TwoWay}">
            <TextBlock FontStyle="Italic">I</TextBlock>
        </ToggleButton>
        <ToggleButton Width="34" Height="28"
                      IsChecked="{Binding SettingsParameter.IsUnderline, ElementName=root, Mode=TwoWay}">
            <TextBlock TextDecorations="Underline">U</TextBlock>
        </ToggleButton>
    </StackPanel>
</UserControl>
