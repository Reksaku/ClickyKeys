<UserControl x:Class="ClickyKeys.GlassPanelWpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="root"
             Height="100" Width="200">


    <Grid x:Name="LayoutRoot"
          RenderTransformOrigin="0.5,0.5"
          MouseLeftButtonDown="OnMouseLeftButtonDown"
          SnapsToDevicePixels="True">

        <Grid.RenderTransform>
            <ScaleTransform ScaleX="{Binding Scale}" ScaleY="{Binding Scale}"/>
        </Grid.RenderTransform>

        <Grid Margin="{Binding InsetThickness}">
            <Rectangle x:Name="MainRectangle"  
                    RadiusX="{Binding CornerRadius}"
                    RadiusY="{Binding CornerRadius}"
                    StrokeThickness="{Binding EdgeGlowThickness}">
                <Rectangle.Fill>
                    <SolidColorBrush Color="{Binding PanelColor}"
                            Opacity="{Binding PanelFillOpacity}"/>
                </Rectangle.Fill>
                <Rectangle.Effect>
                    <DropShadowEffect BlurRadius="15"
                            ShadowDepth="3"
                            Direction="315"
                            Opacity="{Binding ShadowOpacity}"/>
                </Rectangle.Effect>
                <Rectangle.Stroke>
                    <SolidColorBrush Color="White"
                            Opacity="{Binding EdgeGlowOpacity}"/>
                </Rectangle.Stroke>
            </Rectangle>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                Text="{Binding Description}"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{Binding KeyTextBrush}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextAlignment="Center" 
                Visibility="{Binding IsEditorOpen, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>

                <TextBlock Grid.Row="1"
                Text="{Binding Value}"
                FontSize="20"
                Foreground="{Binding ValueTextBrush}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextAlignment="Center" 
                Visibility="{Binding IsEditorOpen, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
            </Grid>
        </Grid>



        <Popup x:Name="EditorPopup"
               Placement="Center"
               StaysOpen="True"
               AllowsTransparency="True"
               IsOpen="{Binding IsEditorOpen}"
               Opacity="1"
               >
            <Border Background="#CCFFFFFF" CornerRadius="{Binding CornerRadius}" Padding="8">

                <StackPanel>
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="DescriptionBox"
                                materialDesign:HintAssist.Hint="Description" 
                                 FontSize="14" 
                                 Margin="0,0,0,8" 
                                 Grid.Row="0"
                                 Grid.Column="0" Grid.ColumnSpan="4"
                                 HorizontalAlignment="Center"/>
                        <Button Content="Input" x:Name="InputBtn"
                                Click="OnInputKey" 
                                FontSize="14" 
                                Grid.Row="1" 
                                Grid.Column="0" Grid.ColumnSpan="2"
                                Margin="5,0,5,2"/>
                        <Button Content="" Background="Red"
                                Width ="{Binding ActualHeight, 
                                    RelativeSource={RelativeSource AncestorType=Control},
                                    Converter={StaticResource DivideBy4}}"
                                Height="{Binding Width, RelativeSource={RelativeSource Self}}" 
                                Click="OnCloseEditor" Grid.Row="1" Grid.Column="2"/>
                        
                        <Button Content="" Background="Green"  
                                Width ="{Binding ActualHeight, 
                                    RelativeSource={RelativeSource AncestorType=Control},
                                    Converter={StaticResource DivideBy4}}"
                                Height="{Binding Width, RelativeSource={RelativeSource Self}}" 
                                Click="OnSaveEditor" Grid.Row="1" Grid.Column="3"/>
                    </Grid>

                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
